{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "~/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "types": ["unplugin-icons/types/vue"]
  },
  "include": ["src/**/*", "vite.config.ts"]
}
